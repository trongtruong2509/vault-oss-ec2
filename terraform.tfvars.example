# AWS Configuration
aws_region = "us-east-1"
access_key = "<YOUR_ACCESS_KEY>"
secret_key = "<YOUR_SECRET_KEY>"

# VPC Configuration
create_vpc = true  # Set to false to use existing VPC
vpc_cidr   = "10.0.0.0/16"
# vpc_id    = "<EXISTING_VPC_ID>"  # Uncomment if create_vpc = false
# existing_public_subnets  = ["<SUBNET_ID_1>", "<SUBNET_ID_2>"]  # Uncomment if create_vpc = false
# existing_private_subnets = ["<SUBNET_ID_1>", "<SUBNET_ID_2>"]  # Uncomment if create_vpc = false

# EC2 Configuration
instance_name             = "vault-server"
instance_type             = "t3.medium"
associate_public_ip_address = true
public_key                = "<PATH_TO_PUBLIC_KEY>"  # Optional: SSH key path
volume_size               = 20

# Vault Configuration
vault_version   = "1.15.4"
storage_backend = "file"  # Options: file, raft
enable_ui       = true

# Auto-unseal Configuration
auto_unseal = false
# kms_key_id  = "<KMS_KEY_ID>"  # Uncomment if auto_unseal = true

# ALB Configuration
create_alb = false  # Set to true to create an ALB

# Environment
environment = "dev"
